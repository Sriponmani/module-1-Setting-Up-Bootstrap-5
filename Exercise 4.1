  <link rel="stylesheet" href="css/bootstrap.min.css">
</head>
<body>

  <div class="container mt-4">
    <div class="row">
      <!-- Sidebar -->
      <div class="col-12 col-md-3 mb-4 mb-md-0">
        <div class="p-3 bg-light border rounded h-100">
          <h4>Sidebar</h4>
          <ul class="list-unstyled">
            <li><a href="#" class="text-decoration-none">Link 1</a></li>
            <li><a href="#" class="text-decoration-none">Link 2</a></li>
            <li><a href="#" class="text-decoration-none">Link 3</a></li>
          </ul>
        </div>
      </div>

      <!-- Main Content -->
      <div class="col-12 col-md-9">
        <div class="p-4 bg-white border rounded">
          <h2>Main Content</h2>
          <p>
            This is the main content area. On smaller screens, it appears below the sidebar. On medium and larger screens, it takes up 75% of the width.
          </p>
        </div>
      </div>
    </div>
  </div>

  <!-- Bootstrap JS Bundle -->
  <script src="js/bootstrap.bundle.min.js"></script>
