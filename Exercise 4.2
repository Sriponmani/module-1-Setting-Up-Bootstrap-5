<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>Four Column Layout</title>
  <link rel="stylesheet" href="css/bootstrap.min.css">
</head>
<body>

  <div class="container mt-4">
    <div class="row text-center">
      <!-- Column 1 -->
      <div class="col-12 col-sm-3 mb-4">
        <div class="p-4 bg-primary text-white rounded">Column 1</div>
      </div>

      <!-- Column 2 -->
      <div class="col-12 col-sm-3 mb-4">
        <div class="p-4 bg-success text-white rounded">Column 2</div>
      </div>

      <!-- Column 3 -->
      <div class="col-12 col-sm-3 mb-4">
        <div class="p-4 bg-warning text-dark rounded">Column 3</div>
      </div>

      <!-- Column 4 -->
      <div class="col-12 col-sm-3 mb-4">
        <div class="p-4 bg-danger text-white rounded">Column 4</div>
      </div>
    </div>
  </div>

  <script src="js/bootstrap.bundle.min.js"></script>
</body>
</html>
